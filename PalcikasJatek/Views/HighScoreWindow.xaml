<Window x:Class="Palcikas_Jatek.Views.HighScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palcikas_Jatek.Views"
        mc:Ignorable="d"
        Title="Pálcikás Játék - HighScores" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="500" Width="500">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Foreground="White" Content="Scores" Margin="15,5,5,5" FontWeight="Bold"/>

        <ListBox Grid.Row="1" x:Name="ScoresListBox" Margin="15, 0, 15, 0" SelectionMode="Single" />

        <Button Grid.Row="2" x:Name="NewGameButton" Content="New Game" Width="200" HorizontalAlignment="Center" Margin="5, 10, 5, 10" Click="NewGameButton_Click"/>
    </Grid>
</Window>
