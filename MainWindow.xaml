<Window x:Class="Palcikas_Jatek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palcikas_Jatek"
        mc:Ignorable="d"
        Title="Pálcikás Játék" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight" >
    <StackPanel Background="Black">
        <StackPanel Orientation="Horizontal" Background="White">
            <TextBlock Text="Score:" Margin="5"/>
            <TextBlock x:Name="tbScore" Margin="5"/>
        </StackPanel>
        <Canvas x:Name="canvas" Height="500" Width="500" Background="White"
                MouseMove="canvas_MouseMove"
                Margin="20"/>
    </StackPanel>
</Window>
